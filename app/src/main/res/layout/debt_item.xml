<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_debt"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        tools:src="@mipmap/deuda"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_debt_creditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                tools:text="Liverpool es parte de tu vida"
                />

            <TextView
                android:id="@+id/txt_debt_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                tools:text="$250.00"/>

            <TextView
                android:id="@+id/txt_debt_months"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                tools:text="12 meses sin intereses"/>

        </LinearLayout>


</LinearLayout>