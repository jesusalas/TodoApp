<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_debt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:adjustViewBounds="true"
        android:src="@mipmap/deuda" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/debt_instructions"/>

    <EditText
        android:id="@+id/txt_salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/debt_salary_hint"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_loggin_debt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/debt_loggin_button"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_exit_dbt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/debt_exit_button"/>

    <Button
        android:id="@+id/btn_calculate_debt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/debt_calculate_button"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

</LinearLayout>